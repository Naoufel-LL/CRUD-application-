<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee  http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

<servlet>
<servlet-name>fbs</servlet-name>
<servlet-class>web.ControleurServlet</servlet-class>
</servlet>
<servlet-mapping>
<servlet-name>fbs</servlet-name>
<url-pattern>/users</url-pattern>
</servlet-mapping>


<servlet>
<servlet-name>f</servlet-name>
<servlet-class>web.RegistreServlet</servlet-class>
</servlet>
<servlet-mapping>
<servlet-name>f</servlet-name>
<url-pattern>/Registre</url-pattern>
</servlet-mapping>

<servlet>
<servlet-name>delete</servlet-name>
<servlet-class>web.DeleteServlet</servlet-class>
</servlet>
<servlet-mapping>
<servlet-name>delete</servlet-name>
<url-pattern>/delete.jsp</url-pattern>
</servlet-mapping>

<servlet>
<servlet-name>update</servlet-name>
<servlet-class>web.UpdateServlet</servlet-class>
</servlet>
<servlet-mapping>
<servlet-name>update</servlet-name>
<url-pattern>/up</url-pattern>
</servlet-mapping>

<welcome-file-list>
       <welcome-file>Registre.jsp</welcome-file>
       <welcome-file>usersView.jsp</welcome-file>

   </welcome-file-list>


</web-app>
